- @causes = @issue.causes

%div.relationship_addnew_wait
 
- if @issue_causes.length > 0

  %div#cause_pagination
    = will_paginate (@issue_causes), :page_links=>false, :param_name => 'cause_page',:style=>"float:right;", :previous_label => '&#9668;', :next_label => '&#9658;', :outer_window =>0, :inner_window => 0
  
    %div{:style=>"float:right; margin:2px 15px -12px 0px;", :id=>"causes_wait"}
  
  - @issue_causes.each do |cause|
    %div.relationship_thumb
      - @cause_relationship_id = @issue.relationships.where(:cause_id=>cause.id, :relationship_type=>nil).select('id').first.id

      %div.relationship_thumb_title
        = link_to cause.title, cause, :rel => "#{cause.description}"
        
      %div{:class=>"relationship_thumb_main", :style=>"background-image:url(#{cause.short_url})"}

        = link_to cause.title, cause, :rel => "#{cause.description}"
      
      %span.relationship_id_store{:style=>"display:none;", :id=>"rel_id_#{@cause_relationship_id})"}
        = @cause_relationship_id
      
- else
  .relationship_none_found
    No Causes have been identified yet. 

%div.relationship_addnew
  %div.relationship_addnew_title
    %a#add_cause_btn.poplight{:href => "#?w=500", :rel => "popup_name",:title => "add new"}
      Add New
                
  %div.relationship_thumb_addnew
    %a#add_cause_btn.poplight{:href => "#?w=500", :rel => "popup_name", :title => "add new"} 
  
  
        
%div{:style => "clear:both"} 
