%div{:style=>"float:right;margin:12px 0px -24px -24px;", :id=>"relationship_wait"}
- if @relationship
  %div.title
    #title_dynamic_text
      %span#title_issue
        = @rel_issue.title
      %span#title_causality{:style=>"font-size:16px;"}
        = @causal_sentence
      %span#title_relationship
        = @rel_cause.title
        
  %div.rationale_container
    
    %div{:style=>"float:left;"}
      %div.relation_descr
            
        .rationale_headers
          Relationship
        .clearboth
        // paragraph retrieved from wikipedia page
        %p
          %b
            %span#issue_title_dynamic
              = link_to @rel_issue.title + ':', @rel_issue, :title=>"View this Issue"
           
          %span#issue_descr_dynamic
            = @rel_issue.description.html_safe
          %img.linkout{:src=>"/images/system/linkout.png"}
          %a{:href=>@rel_issue.wiki_url, :target => "_blank"} more on Wikipedia
    
        %p  
          %b
            %span#issue_title_dynamic
              = link_to @rel_cause.title + ':', @rel_cause, :title=>"View this Issue"
               
          %span#issue_descr_dynamic
            = @rel_cause.description.html_safe
          %img.linkout{:src=>"/images/system/linkout.png"}
          %a{:href=>@rel_cause.wiki_url, :target => "_blank"} more on Wikipedia


      %div.relation_discussion
              
        .rationale_headers
          References  
        .clearboth  
 
        %div#get_references
          = render 'get_references', :relationship => @relationship

      %div.relation_discussion

        .rationale_headers
          Comments 
        .clearboth

        %div#get_comments
          = render 'get_comments', :relationship => @relationship
      
      .clearboth
                
    %div.relation_controls
  
      %div#relation_owner
        - if @relationship.user       
          - @rel_owner = Digest::MD5.hexdigest(@relationship.user.email).to_s
          %a{:href=>"/users/#{@relationship.user.id}", :style=>"text-decoration:none;float:right;margin:0px;"}
            %img{:src=> "http://www.gravatar.com/avatar/#{@rel_owner}?s=35&d=mm", :style=>"margin:0px;", :class=>"gravatar"}
          .gravatar_text
            %span.date_time>= time_ago_in_words(@relationship.created_at) + ' ago'           
            %br
            %a{:href=>"/users/#{@relationship.user.id}"}>= @relationship.user.username
            %br>= pluralize(@relationship.user.relationships.length(), "causal link")
          .clearboth
        - else
          %img{:src=> "http://www.gravatar.com/avatar?s=35&d=mm", :style=>"margin:0px;float:right", :class=>"gravatar"}
          .gravatar_text  
            %span.date_time>= time_ago_in_words(@relationship.created_at) + ' ago'
            %br>Anonymous user
          .clearboth        

      /%div.discussion_submit{:style=>"margin-bottom:10px;float:none;padding:0px;"}
      /  .med-relation
      /    Visualize relation
      
      - @permalink = request.protocol + request.host_with_port + "/issues/" + @rel_issue.id.to_s + '-' + @rel_issue.permalink + '?rel_type=' + @causal_sentence.gsub(" ", "+") + '&rel_id=' + @relationship.id.to_s
      %div.discussion_submit{:style=>"float:none;padding:0px; margin-top:10px;"}
        %a.perm-relation{:href=>"#{@permalink}", :target=>"_blank"}
          Go to Permalink
      
      #permalink_display
        = @permalink
      
      - if current_user
        %div{:class=>"relationship_delete"}
          = link_to "Delete Relationship", "../relationships/#{@relationship.id}", :confirm => "Are you sure you want to delete the relationship?", :method => :delete, :remote=>true, :class=>"del-issue",:title=>"delete this causal link", :class=>"del-relation"
          //%a{"data-confirm" => "are you sure?", "data-title"=>"Delete Causal Link", "data-remote"=>"true", "data-method" => "delete", :href => "../relationships/#{@relationship.id}", :rel => "nofollow", :title=>"delete this causal link", :class=>"del-relation"} 
          //  Delete Relationship       
            
    .clearboth
    

- else
  %div.title
    #title_dynamic_text
      %span#title_issue
        = @issue.title
        
  %div.rationale_container
    %div{:style=>"float:left;"}
      %div.relation_descr     
        .rationale_headers
          Wikipedia Description
        .clearboth
        // paragraph retrieved from wikipedia page
        %p
          %b
            %span#issue_title_dynamic
              = link_to @issue.title + ':', @issue, :title=>"View this Issue"
           
          %span#issue_descr_dynamic
            = @issue.description.html_safe
          %img.linkout{:src=>"/images/system/linkout.png"}
          %a{:href=>@issue.wiki_url, :target => "_blank"} more on Wikipedia
              
    %div.relation_controls 
  
      %div.discussion_submit{:style=>"margin-bottom:10px;float:none;padding:0px;"}
        .med-relation
          Visualize Issue
                      
    .clearboth
    

