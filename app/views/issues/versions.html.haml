- content_for(:include_custom_stylesheet) do
	= stylesheet_link_tag "styles"

#contentwrapper
	.contentmain
		%div{:style=>"color: #434343;font-size: 18px;text-align: center;"}
			Revision history for:
			%b				
				= link_to @issue.title, issue_path(@issue), :class=>"logo_txt", :style=>"text-decoration:none;text-shadow:none"
		-#%div{:id=>"notice"}
			-#= notice
		%div{:id=>"versions"}
			= render "versions"
		
		- if @versions.count > 0
			%div{:id=>"wait", :style=>"display:block;margin-left:auto; margin-right:auto;"}
			%div{:id=>"get_more", :segment=>"2", :style=>"text-align:center;padding:5px; font-size:18px;cursor:pointer;"} More
			-#%div{:id=>"go", :segment=>"2",:style=>"float:right;width:100px;margin-top:20px;", :title=>"More contributions"}
			-#	%div{:id=>"next", :style=>"float:right;cursor:pointer;", :title=>"Next"} Next
			-#	%div{:id=>"previous", :style=>"float:left;cursor:pointer;", :title=>"Previous"} Previous
			-#%div{:style=>"clear:both;"}
%div{:style=>"clear:both;"}
%script{:src => "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css", :type => "text/javascript"}
%script{:src => "http://ajax.googleapis.com/ajax/libs/jquery/1.5/jquery.min.js", :type => "text/javascript"}
%script{:src => "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js", :type => "text/javascript"}
%script{:type => "text/javascript"}

	$("div#get_more").click(function(){ 
	
	$(this).hide();
	$("div#wait").html('<img src="/images/system/spinner.gif" />');

	$.ajax({url: document.location.href, data: {segment: $("div#get_more").attr("segment")}, success: function(data){
	$("div#wait").empty();
	$("div#get_more").show();
	$("div#get_more").attr("segment", parseInt($("div#get_more").attr("segment"))+1);
	}});

	return false;
	});



	

	$("div#next").click(function(){
  
	$("div#previous").show();
	$("div#go").attr("segment", parseInt($("div#go").attr("segment"))+1);
	$("div#go").hide();
	$("div#wait").html('<img src="/images/system/spinner.gif" />');

	$.ajax({url: document.location.href, data: {segment: $("div#go").attr("segment")}, success: function(data){
	$("div#go").show();
	$("div#wait").empty();

	if ($(".version").length < 10){
	$("div#next").hide();
	}else{
	$("div#next").show();
	}

	}});

	return false;
	});

	$("div#previous").click(function(){

	$("div#next").show();
	if (parseInt($("div#go").attr("segment")) > 2){
  
	$(this).show();
	$("div#go").attr("segment", parseInt($("div#go").attr("segment"))-1);
	$("div#go").hide();
	$("div#wait").html('<img src="/images/system/spinner.gif" />');

	$.ajax({url: document.location.href, data: {segment: $("div#go").attr("segment")},success: function(data){
	$("div#go").show();
	$("div#wait").empty();
	}});

	}else{
	$(this).hide();
	}

	return false;
	});

