- if @issue_subsets.length > 0

  %div#subset_pagination
    = will_paginate (@issue_subsets), :page_links=>false, :param_name => 'subset_page',:style=>"float:right;", :previous_label => '&#9668;', :next_label => '&#9658;', :outer_window =>0, :inner_window => 0
  
    %div{:style=>"float:right; margin:2px 15px -12px 0px;", :id=>"subsets_wait"}
  
  %div{:style=>"clear:both;"}  
  %div.relationship_addnew_wait
  - @issue_subsets.each do |subset|
    %div.relationship_thumb
  
      %div.relationship_thumb_title
        = link_to subset.title, subset, :rel => "#{subset.description}"
        
      %div{:class=>"relationship_thumb_main", :style=>"background-image:url(#{subset.short_url})"}
        = link_to subset.title, subset, :rel => "#{subset.description}"

- else
  .relationship_none_found
    No subsets have been identified yet. 

%div.relationship_addnew
  %div.relationship_addnew_title
    %a#add_subset_btn.poplight{:href => "#?w=500", :rel => "popup_name", :title => "add new"}
      Add New
                
  %div.relationship_thumb_addnew
    %a#add_subset_btn.poplight{:href => "#?w=500", :rel => "popup_name", :title => "add new"} 
  
  
        
%div{:style => "clear:both"} 
