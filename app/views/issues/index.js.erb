// Reload partials and highlight
	$("#issues").html("<%= escape_javascript(render("issues")) %>");
	$("#progress_partial").html("<%= escape_javascript(render('layouts/progress_partial'))%>")
	$(".formcontentdiv").effect("highlight", {color: '#f5f5f5'}, 1500);

// handle notices
if ($.trim($('#notice').text()) != "") {
	$("#notice_container").effect("highlight", {color: '#4DB8DB'}, 800);
  	$("#notice").show;
  }

	setTimeout(function() {
	    $('#notice_container').fadeOut('slow');
	    $('#notice').empty();	
	}, 3000);