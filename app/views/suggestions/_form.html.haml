= form_for @suggestion do |f|
  -if @suggestion.errors.any?
    #error_explanation
      %h2= "#{pluralize(@suggestion.errors.count, "error")} prohibited this suggestion from being saved:"
      %ul
        - @suggestion.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :wiki_url
    = f.text_field :wiki_url
  .field
    = f.label :type
    = f.text_field :type
  .field
    = f.label :status
    = f.text_field :status
  .field
    = f.label :issue_id
    = f.text_field :issue_id
  .actions
    = f.submit 'Save'
