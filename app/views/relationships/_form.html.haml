- content_for(:include_custom_stylesheet) do
  = stylesheet_link_tag "styles"
  
 
#contentwrapper
  .contentmain
    
    %div{:class=>"centralized"}
      %div{:class=> "formheading"}
        Establish new relationship
      %div{:class => "formcontentdiv"}

        = form_for @relationship do |f|
          -if @relationship.errors.any?
            #error_explanation
              %div{:class=>"formerrorhead"}
                = "#{pluralize(@relationship.errors.count, "error")} prohibited this relationship from being saved:"
              %ul{:class=>"formerrordetails"}
                - @relationship.errors.full_messages.each do |msg|
                  %li= msg
        
          #form_elements
          
            .field
              %div{:class=>"formlabel", :style=>"text-align:right;"}
                = f.label :issue_id
                %div{:class=>"helper_text"}
                  Choose your username
              %div{:class=>"formlabel"}    
                = f.text_field :issue_id, :class=>"formfield", :autocomplete=>"off"
              %div{:style=>"clear:both;"}
              
            .field
              %div{:class=>"formlabel", :style=>"text-align:right;"}
                = f.label :cause_id
                %div{:class=>"helper_text"}
                  Choose your username
              %div{:class=>"formlabel"}
                              
                = f.text_field :cause_id, :class=>"formfield", :autocomplete=>"off"
              %div{:style=>"clear:both;"}
              %br
                
            .actions
              %div{:class=>"form_button"}
                = f.submit 'Save', :class=>"save_button"
              %div{:style=>"clear:both;"}

              
#clear{:style => "clear:left;"}                